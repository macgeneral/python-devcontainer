{
  "name": "Docker Dev Container",
  "build": {
    "context": "../",
    "dockerfile": "../Dockerfile",
    "image": "python-devcontainer:dev",
    "pull": false,
    "target": "dev_image"
  },
  "mounts": [
    "source=${localWorkspaceFolder}/.devcontainer/config/.zshrc,target=/opt/app/.zshrc,type=bind",
    // container caches
    "source=linuxCache,target=/opt/app/.cache,type=volume",
    // avoid reinstalling all extensions on each launch
    "source=vscodeCache,target=/opt/app/.vscode-server,type=volume"
  ],
  "postAttachCommand": "pre-commit install && uv sync",
  "remoteUser": "worker",
  "customizations": {
    "vscode": {
      "extensions": [
        "astral-sh.ty",
        "charliermarsh.ruff",
        "esbenp.prettier-vscode",
        "Gruntfuggly.todo-tree",
        "ms-python.python",
        "tamasfe.even-better-toml"
      ]
    },
    "settings": {
      // basic settings
      "files.autoSave": "afterDelay",
      "files.autoSaveDelay": 5000,
      "editor.rulers": [
        88,
        100,
        120
      ],
      "editor.tabSize": 2,
      "[html]": {
        "editor.tabSize": 2,
        "editor.formatOnSave": false
      },
      "[python]": {
        "editor.tabSize": 4,
        "diffEditor.ignoreTrimWhitespace": false,
        "editor.formatOnType": true,
        "editor.wordBasedSuggestions": "off",
        "editor.defaultFormatter": "charliermarsh.ruff"
      },
      "[json]": {
        "editor.quickSuggestions": {
          "strings": true
        },
        "editor.tabSize": 2,
        "editor.suggest.insertMode": "replace"
      },
      "editor.codeActionsOnSave": {
        "source.organizeImports": "always"
      },
      "editor.insertSpaces": true,
      "editor.detectIndentation": true,
      "workbench.iconTheme": "material-icon-theme",
      "editor.fontFamily": "Source Code Pro",
      "editor.fontSize": 14,
      // terminal settings
      "terminal.integrated.fontFamily": "Source Code Pro for Powerline",
      // telemetry
      "telemetry.telemetryLevel": "off",
    // git
      "gitlens.advanced.messages": {
        "suppressShowKeyBindingsNotice": true
      },
      "git.autofetch": true,
      // misc
      "htmlhint.options": {
        "attr-lowercase": false
      },
      "editor.formatOnPaste": false,
      "editor.formatOnSave": false,
      "editor.formatOnType": false,
      "python.analysis.autoImportCompletions": true,
      "dev.containers.experimentalLockfile": true
    }
  }
}
